<?xml version="1.0" encoding="utf-8"?>
<batch xmlns="http://www.scec.org/xml-ns/csep/0.1">
   
   <directory>batch_runs</directory>
   
   <!-- Common to all processes command-line options -->
   <commandLineOptions enableForecastMap=""/>
                       

   <!-- Generate GMT maps for California forecast -->
   <process executable="src/generic/GeographicalRegions.py"
            forecast="CENTERCODE/src/generic/test/data/genericDistribution/ebel.aftershock.xml"
            testDir="CaliforniaMap"
            geographicalRegion="California"
            scaleFactor="0.5"
            logFile="logs/testCaliforniaMap">
   </process>

   <process executable="src/generic/GeographicalRegions.py"
            forecast="CENTERCODE/src/generic/test/data/genericDistribution/ebel.aftershock.xml"
            testDir="CaliforniaMapWithCatalog"
            catalog="CENTERCODE/src/generic/test/data/genericDistribution/catalogs/RELMAftershock/catalog.nodecl.dat"
            geographicalRegion="California"
            logFile="logs/testCaliforniaMapWithCatalog">
   </process>

   <!-- Generate GMT maps for NW Pacific forecast -->
   <process executable="src/generic/GeographicalRegions.py"
            forecast="CENTERCODE/src/generic/test/data/genericDistribution/DBMOneYearNWPacific_6_3_2006.xml"
            testDir="NWPacificMap"
            geographicalRegion="NWPacific"
            scaleFactor="0.5"
            logFile="logs/testNWPacificMap">
   </process>

   <!-- Generate GMT maps for SW Pacific forecast -->
   <process executable="src/generic/GeographicalRegions.py"
            forecast="CENTERCODE/src/generic/test/data/genericDistribution/DBMOneYearSWPacific_6_3_2006.xml"
            testDir="SWPacificMap"
            geographicalRegion="SWPacific"
            scaleFactor="0.5"
            logFile="logs/testSWPacificMap">
   </process>

</batch>