            forecasts="testForecasts"
            testDir="RTestForecast"
            postProcessing="RELMAftershock"
            tests="R"
            numTestSimulations="5"
            logFile="logs/testXMLForecastRTest">
     <schedule>
        <year>
            2009
            <month>
                7
                <day>3</day>
            </month>    
        </year>
     </schedule>         
   </process>

