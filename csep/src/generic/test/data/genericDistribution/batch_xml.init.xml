            forecasts="testForecasts"
            testDir="NTestForecastManualSettings"
            startDate="2006-01-01"
            endDate="2011-01-01"
            catalog="NTestForecastManualSettings/catalog.nodecl.mat"
            tests="N"
            logFile="logs/testXMLForecastNTestManualSettings">
     <schedule>
        <year>
            2009
            <month>
                7
