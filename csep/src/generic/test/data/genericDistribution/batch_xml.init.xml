<?xml version="1.0" encoding="utf-8"?>
<batch xmlns="http://www.scec.org/xml-ns/csep/0.1">
   
   <directory>batch_runs</directory>
   
   <!-- Common to all processes command-line options -->
   <commandLineOptions enableForecastXMLTemplate=""
                       disableXMLForecastValidation=""/>
                       

   <!-- Invoke RELM N-test for XML format of the forecast -->
   <process executable="src/generic/EvaluationTest.py"
            forecasts="testForecasts"
            testDir="NTestForecast"
            postProcessing="RELMAftershock"
            tests="N"
            logFile="logs/testXMLForecastNTest">
     <schedule>
        <year>
            2009
            <month>
                7
                <day>1</day>
            </month>
        </year>
     </schedule>         
   </process>

   <!-- Invoke RELM L-test for XML format of the forecast -->
   <process executable="src/generic/EvaluationTest.py"
            forecasts="testForecasts"
            testDir="LTestForecast"
            postProcessing="RELMAftershock"
            tests="L"
            numTestSimulations="10"
            logFile="logs/testXMLForecastLTest">
     <schedule>
        <year>
            2009
            <month>
                7
                <day>2</day>
            </month>
        </year>
     </schedule>         
   </process>

   <!-- Invoke RELM R-test for XML format of the forecast -->
